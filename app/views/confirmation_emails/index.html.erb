<p id="notice"><%= notice %></p>

<h1>Confirmation Emails</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confirmation_emails.each do |confirmation_email| %>
      <tr>
        <td><%= confirmation_email.subject %></td>
        <td><%= confirmation_email.content.html_safe %></td>
        <td><%= link_to 'Show', confirmation_email %></td>
        <td><%= link_to 'Edit', edit_confirmation_email_path(confirmation_email) %></td>
        <td><%= link_to 'Destroy', confirmation_email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if(@confirmation_emails.first.nil?) %>
<%= link_to 'New Confirmation Email', new_confirmation_email_path %>
<% end %>