<div class="container" id="div_news">
  <p id="notice"><%= notice %></p>

  <%unless @news.empty? %>
      <% @news.each do |news| %>
        <h4><%= news.title %></h4>
        <p id="date"><%= news.created_at.strftime("%d %b %Y (%a)") %></p>
        <%= image_tag news.title_image.url, class: "img-fluid rounded mx-auto d-block", style: "width: 500px; height: 300px;"%>
        <%= news.content.first(600).html_safe %>............
        
        <td><%= link_to 'Read More', news %></td>
        <br><br>
      <% end %>
  
  <%else%>
  <p> We are updating news </p>
  <%end%>
  
</div>

<div class="apple_pagination">
    <div class="page_info">
      <%= page_entries_info @news %>
    </div>
    <%= will_paginate @news, :container => false %>
</div>    
