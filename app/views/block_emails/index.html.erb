<p id="notice"><%= notice %></p>

<h1>Block Emails</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @block_emails.each do |block_email| %>
      <tr>
        <td><%= block_email.subject %></td>
        <td><%= block_email.content.html_safe %></td>
        <td><%= link_to 'Show', block_email %></td>
        <td><%= link_to 'Edit', edit_block_email_path(block_email) %></td>
        <td><%= link_to 'Destroy', block_email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if(@block_emails.first.nil?) %>
<%= link_to 'New Block Email', new_block_email_path %>
<% end %>